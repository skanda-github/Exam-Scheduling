                    <a href="http://localhost:3000/admin_side"  class="w3-bar-item w3-button w3-center w3-padding-small">Admin Page</a>
                    <a href="http://localhost:3000/complete_list"  class="w3-bar-item w3-button w3-center w3-padding-small">Complete List</a>   
                </nav>
              
                  <!-- Top menu on small screens -->
                <header class="w3-container w3-top w3-white w3-large w3-padding-16">
                          <span class="w3-left w3-padding">TEACHER ALLOTMENT</span>
                          <a href="javascript:void(0)" class="w3-right w3-button w3-white" onclick="w3_open()">â˜°</a>
                </header>
              
        
            <br><br><br><br><br>

       <center>
        <form  action='/register3' name="teacher_allotment" id="teacher_allotment"  method="POST">

            <label for="Room_no">Room number&nbsp;</label>
            <input type="text" name="room_no" class="form(TA)" placeholder="Enter the Room number" required autocomplete="on">
            <br><br>
    
            <label for="Teacher_id">Teacher ID&nbsp;</label>
            <input type="text" name="teacher_id" class="form(TA)" placeholder="Enter the teacher_id" required autocomplete="on">
            <br><br>
    
            <label for="dept_id">Department Number&nbsp;</label>
            <input type="text" name="dept_id" class="form(TT)" placeholder="Enter the dept_number" required autocomplete="on">
            <br><br>
    
            <label for="exam_date">Exam Date&nbsp;</label>
            <input type="date" name="exam_date" class="form(TA)" required autocomplete="on">
            <br><br>
    
            <label for="exam_time">Exam Time</label>
            <select name="exam_time" id="exam_time" class="form(TA)" required autocomplete="on">
                  <option value="9-30 AM - 12-30 PM">9-30 AM - 12-30 PM</option>
                  <option value="2-00 PM - 5-00 PM">2-00 PM - 5-00 PM</option>
            </select>  
            <br><br>    
    
            <button type="submit" >Submit</button> 
    
            <br><br>
    
    
           </form> 
       </center>


</body>
</html>

