                    </nav>
                  
                      <!-- Top menu on small screens -->
                    <header class="w3-container w3-top w3-white w3-large w3-padding-16">
                              <span class="w3-left w3-padding">SCHEDULE TIME TABLE</span>
                              <a href="javascript:void(0)" class="w3-right w3-button w3-white" onclick="w3_open()">â˜°</a>
                    </header>
                  
            
                <br><br><br><br><br>
       <center>
        <form  action='/register2' name="time_table" id="time_table"  method="POST">

            <label for="Course_no">Course number&nbsp;</label>
            <input type="text" name="course_no" class="form(TT)" placeholder="Enter the course number" required autocomplete="on">
            <br><br>
    
            <label for="exam_date">Exam Date&nbsp;</label>
            <input type="date" name="exam_date" class="form(TT)" required autocomplete="on">
            <br><br>
    
            <label for="exam_time">Exam Time</label>
            <select name="exam_time" id="exam_time" class="form(TT)" required autocomplete="on">
                  <option value="9-30 AM - 12-30 PM">9-30 AM - 12-30 PM</option>
                  <option value="2-00 PM - 5-00 PM">2-00 PM - 5-00 PM</option>
            </select>      
            <br><br>
    
            <label for="number">Year</label>
            <input type="number" id="number" class="form(TT)" name="number" min="1" max="4" autocomplete="on">
            <br><br>
    
            <label for="dept_id">Department Number&nbsp;</label>
            <input type="text" name="dept_id" class="form(TT)" placeholder="Enter the dept_number" required autocomplete="on">
            <br><br>
    
            <button type="submit" >Submit</button> 
    
            
           </form>
       </center>         


</body>
</html>

